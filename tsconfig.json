{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "outDir": "./js",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "js"
  ]
}